(
    echo 'ğŸ¤¢ğŸ¤®ğŸ¤¢ğŸ¤® Its so ugly!! - Your styling looks disgusting. ğŸ¤¢ğŸ¤®ğŸ¤¢ğŸ¤®
            Prettier Check Failed. Running pnpm run format...';
    pnpm run format;
    git add .;
    echo 'âœ¨ Formatting complete and changes added. Committing with the previous commit message...';
    git commit --amend --no-edit;
    echo 'âœ…âœ… Amended commit with the new changes. Please try to push again.';
)

# check format
echo 'ğŸ—ï¸ğŸ‘· Checking for Prettier errors ğŸ”ğŸ§'
pnpm check-format ||
(
    echo 'ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ Its so ugly!! - Your formatting looks disgusting. ğŸ¤¢ğŸ˜­ğŸ˜­ğŸ˜­
    Prettier Check Failed. Running pnpm run format...';
    pnpm format;
    git add .;
    echo 'âœ¨ Formatting complete and changes added. Committing with the previous commit message...';
