#!/usr/bin/env sh

# Get the current branch name
BRANCH=$(git rev-parse --abbrev-ref HEAD)

# List of protected branches
PROTECTED_BRANCHES="^(main|staging|dev)$"

# Check if current branch is protected
if echo "$BRANCH" | grep -qE "$PROTECTED_BRANCHES"; then
    echo "ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«"
    echo "âŒ HOLD UP! You're trying to commit directly to '$BRANCH'"
    echo "âŒ Direct commits to protected branches are NOT allowed!"
    echo ""
    echo "âœ… Please create a feature branch instead:"
    echo "   git checkout -b feat/your-feature-name"
    echo ""
    echo "âœ… Or switch to an existing feature branch:"
    echo "   git checkout your-branch-name"
    echo "ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«ğŸš«"
    exit 1
fi

